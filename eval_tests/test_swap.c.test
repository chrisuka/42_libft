#include "libftest.h"

void	test_swap_batch(size_t iter)
{
	int pair[2];

	srand((unsigned int)time(NULL));
	printf("performing ft_swap unit tests...\n\n");
	while (iter-- != 0)
	{
		pair[0] = rand() % 300 - 150;
		pair[1] = rand() % 300 - 150;
		printf(" pre swap: %i %i\n", pair[0], pair[1]);
		ft_swap((void **)&pair[0], (void **)&pair[1], sizeof(int));
		printf("post swap: %i %i\n", pair[0], pair[1]);
	}
	printf("%s\n\n", col_nul);
}
